<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/signinFragment">

    <fragment
        android:id="@+id/signinFragment"
        android:name="com.hackverse.hackverse.ui.SignInFragment"
        android:label="SigninFragment"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signinFragment_to_paymentSetupFragment"
            app:destination="@id/paymentSetupFragment" />
    </fragment>


    <fragment
        android:id="@+id/paymentSetupFragment"
        android:name="com.hackverse.hackverse.ui.PaymentSetupFragment"
        android:label="PaymentSetupFragment"
        tools:layout="@layout/fragment_amount_setup" />
</navigation>